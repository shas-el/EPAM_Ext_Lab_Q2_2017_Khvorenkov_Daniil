@using TextCatalog.UI.Models;
@model LoginViewModel

@{
    ViewBag.Title = "Sign Up";
}

@using (Html.BeginForm("Register"
                , "Account"
                , FormMethod.Post
                , new { @class = "form-horizontal col-4", role = "form" }))
{
    <div class="form-group">
        @Html.ValidationMessageFor(m => m.UserName)
        @Html.EditorFor(m => m.UserName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Username" } })
    </div>
    <div class="form-group">
        @Html.ValidationMessageFor(m => m.Password)
        @Html.EditorFor(m => m.Password
            , new { htmlAttributes = new { @type = "password", @class = "form-control", @placeholder = "Password" } })
    </div>
    <button type="submit" class="btn">Register</button>
}
