@using MVCApplication.Models;
@model DeleteViewModel

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button class="close" data-dismiss="modal" area-hidden="true">X</button>
        </div>
        <div class="modal-body">
            Are you sure you want to delete Order #@Model.OrderID?
        </div>
        <div class="modal-footer">
            <button class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            <button class="btn btn-danger" data-dismiss="modal" id="btn-delete">
                Delete
            </button>
        </div>
    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#btn-delete").on("click", function () {
                $.ajax({
                    url: '@Url.Action("DeleteOrder", "Home", new { id=Model.OrderID })',
                    cache: false,
                    contentType: false,
                    processData: false,
                    type: "POST",
                    success: function (data) {
                        alert("order successfuly deleted");
                    },
                    error: function (data) {
                        alert("error");
                    }
                });
            });
        });
    </script>
</div>